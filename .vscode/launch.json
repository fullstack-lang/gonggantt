    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ng"
        },
        {
            "name": "Front Simple on local 4200",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "runtimeExecutable": "${env:CHROME_EXE}",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/",
            // the workspace folder is the .vscode ?
            "webRoot": "${workspaceFolder}/ng",
        },
        {
            "name": "go server -diagrams -unmarshall=gantt1 -marshallOnCommit=gantt1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/cmd/gonggantt",
            "args": [
                "-diagrams",
				"-unmarshall",
				"gantt1",
				"-marshallOnCommit",
				"gantt1",
            ]
        },
        {
            "name": "Launch firefox localhost:4200",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/ng",
            "pathMappings": [
                {
                    "url": "webpack:///projects",
                    "path": "${workspaceFolder}/ng/projects"
                }
            ],
        },
    ]
}